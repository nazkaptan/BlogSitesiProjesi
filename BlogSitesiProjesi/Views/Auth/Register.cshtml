@model RegisterViewModel
@{
    ViewData["Title"] = "Kayit ol";
}

<link href="~/css/auth.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="https://www.kindpng.com/picc/m/24-248394_user-icon-hd-png-download.png" id="icon" alt="User Icon" />
            <br />
            <h2 style="margin:0px;">Kayit ol</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (TempData["message"] != null)
        {
                <div class="text-success">@TempData["message"]</div>
        }

        <!-- Register Form -->
        <form asp-action="Register">
            <input asp-for="Email" class="fadeIn second" placeholder="E-mail gir" />
            <br />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input type="submit" value="Kayit ol" class="fadeIn fourth" />
        </form>

        @*Already have an account?*@
        <div id="formFooter">
            <a asp-action="Login" asp-controller="Auth" class="underlineHover">Zaten hesabin var mi?</a>
        </div>
    </div>
</div>